<div class="card">
  <h5 class="card-header">
    Products matching <b>"{{keyword}}"</b>
  </h5>
  {{#if this.empty}}
  <div class="card-body">
    <p>Không có sản phẩm thoả tiêu chí tìm kiếm.</p>
  </div>
  {{else}}
  <div class="card-body">
    <div class="row">
      {{#each this.products}}
      <div class="col-md-6 mb-3">
        <div class="card h-100">
          <img src="/static/imgs/sp/{{proid}}/main_thumbs.jpg" class="card-img-top" alt="{{proname}}"
            title="{{proname}}">
          <div class="card-body">
            <h5 class="card-title">{{proname}}</h5>
            <h5 class="card-title text-danger">{{format_currency price}}</h5>
            <p class="card-text">{{tinydes}}</p>
          </div>
          <div class="card-footer">
            <a class="btn btn-outline-primary btn-sm" href="/products/detail/{{proid}}" role="button">
              <i class="bi bi-eye"></i>
              View Details
            </a>
            <a class="btn btn-outline-success btn-sm" href="#" role="button">
              <i class="bi bi-cart-plus"></i>
              Add to cart
            </a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>