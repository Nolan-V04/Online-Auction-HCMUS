<div class="card">
  <h5 class="card-header">
    <i class="bi bi-person-plus"></i>
    User Profile
  </h5>
  <div class="card-body">
    <form method="post">
      <!-- Username -->
      <div class="row mb-3">
        <label for="username" class="col-sm-3 col-form-label">
          <i class="bi bi-person-circle"></i>
          Username
        </label>
        <div class="col-sm-9">
          <input type="hidden" class="form-control" id="id" name="id" readonly value="{{user.id}}">
          <input type="text" class="form-control" id="username" name="username" value="{{user.username}}" placeholder="Enter username" readonly>
        </div>
      </div>

      <!-- Email -->
      <div class="row mb-3">
        <label for="email" class="col-sm-3 col-form-label">
          <i class="bi bi-envelope"></i>
          Email
        </label>
        <div class="col-sm-9">
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter email address" value="{{user.email}}">
        </div>
      </div>

      <!-- Full Name -->
      <div class="row mb-3">
        <label for="fullname" class="col-sm-3 col-form-label">
          <i class="bi bi-card-heading"></i>
          Full Name
        </label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter full name" value="{{user.name}}">
        </div>
      </div>

      <!-- Date of Birth -->
      <div class="row mb-3">
        <label for="dob" class="col-sm-3 col-form-label">
          <i class="bi bi-calendar-event"></i>
          Date of Birth
        </label>
        <div class="col-sm-9">
          <input type="date" class="form-control" id="dob" value="{{user.dob}}">
        </div>
      </div>

      <!-- Update Button -->
      <div class="row">
        <div class="col-sm-9 offset-sm-3">
          <button type="submit" class="btn btn-outline-primary btn-lg w-100">
            <i class="bi bi-person-check"></i>
            Update Profile
          </button>
        </div>
      </div>
    </form>
  </div>
</div>